<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_piston_pin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/asw"
    tools:context="assalaam.projetc.id.komponentkr.PistonPin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuas Katup:"
        android:fontFamily="cursive"
        android:textColor="#00FFFF"
        android:textSize="21dp"
        android:id="@+id/textView4"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" untuk menekan katup â€“ katup sehingga dapat membuka"
        android:fontFamily="cursive"
        android:textColor="#00FFFF"
        android:textSize="15dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="12dp"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/b5"
        android:id="@+id/imageView"
        android:gravity="center"
        android:layout_weight="0.01"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
